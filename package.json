{
  "name": "flowy-form-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packages": [
    "client",
    "server"
  ],
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --raw --max-processes 0 --handle-input --default-input-target 0 \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --filter 'api' dev",
    "dev:client": "bun run --filter 'web' dev",
    "db:migrate": "bun run --filter 'api' db:migrate",
    "build": "bun run build:server && bun run build:client",
    "build:server": "cd server && bun run build",
    "build:client": "cd client && bun run build",
    "start": "bun run start:server",
    "start:server": "cd server && bun run start",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "lint": "bunx prettier --check .",
    "types": "cd client && bun run types"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0"
  }
}
